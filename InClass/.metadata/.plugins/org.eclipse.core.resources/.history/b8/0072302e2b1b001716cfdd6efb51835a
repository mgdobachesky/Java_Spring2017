import java.util.Scanner;

public class RockPaperScissor {
	// define game options in an enumerator
	public enum options {ROCK, PAPER, SCISSORS}
	
	public static void main(String[] args) {
		// initialize variables
		String choice = "";
		int choiceInt = -1;
		int computerChoice = -1;
		
		// define an object to input data
		Scanner keyboard = new Scanner(System.in);
		
		// prompt user for input
		System.out.println("Please enter \"scissor\" \"rock\" or \"paper\" : ");
		// get input and store in variable
		choice = keyboard.nextLine();
		
		// convert choice to a number
		switch(choice.toLowerCase()) {
			case "rock":
				choiceInt = 0;
				break;
			case "paper":
				choiceInt = 1;
				break;
			case "scissors":
				choiceInt = 2;
				break;
			default:
				break;
		}
		
		// get computers choice
		computerChoice = (int)Math.random() * 2;
		
		// if computer wins, else computer loses
		if(computerChoice - choiceInt == -2 || computerChoice - choiceInt == 1) {
			System.out.printf("Computer is %d you are %d you lose!", computerChoice, choiceInt);
		} else if (computerChoice - choiceInt == -1 || computerChoice - choiceInt == 0) {
			System.out.printf("Computer is %d you are %d you win!", computerChoice, choiceInt);
		}
		

		
		// close Scanner object
		keyboard.close();
	}
}
