package application;

public class Card {
	
	// Class Properties
	private int rank;
	private String suit;
	
	// Class Constructor
	public Card(int rank, String suit) {
		this.rank = rank;
		this.suit = suit;
	}
	
	// Getters
	public int getRank() {
		return this.rank;
	}
	
	public String getSuit() {
		return this.suit;
	}
	
	// Methods
	public void print() {
		switch(getRank()) {
		case 0:
			System.out.println("Ace of " + getSuit());
			break;
		case 10: 
			System.out.println("Jack of " + getSuit());
			break;
		case 11: 
			System.out.println("Queen of " + getSuit());
			break;
		case 12: 
			System.out.println("King of " + getSuit());
			break;
		default:
			System.out.println((getRank() + 1) + " of " + getSuit());
		}
		
	}
}
