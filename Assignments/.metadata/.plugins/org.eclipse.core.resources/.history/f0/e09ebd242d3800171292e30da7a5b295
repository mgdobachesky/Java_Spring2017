package application;

public class Card {
	// Define enumerator
	public enum suits {DIAMONDS, HEARTS, SPADES, CLOVERS}
	
	// Define class properties
	private int value;
	private suits suit;
	
	// Define class constructor
	public Card(int value, suits suit) {
		this.value = value;
		this.suit = suit;
	}
	
	// Getters
	public int getValue() {
		return this.value;
	}
	
	public suits getSuit() {
		return this.suit;
	}
	
	public void print() {
		System.out.println(getValue() + suit.name());
	}
}
