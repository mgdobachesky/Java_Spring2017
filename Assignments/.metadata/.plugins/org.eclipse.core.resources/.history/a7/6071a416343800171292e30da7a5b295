package application;

public class DeckOfCards {
	final static String[] suits = {"Hearts", "Diamonds", "Clubs", "Spades"};
	// Define class properties
	private final static int DECK_SIZE = 52;
	
	private Card[] deck = new Card[DECK_SIZE];
	
	// Define class constructor
	public DeckOfCards() {
		int deckPosition = 0;
		for(String suit : suits) {
			for(int rank = 0; rank < (DECK_SIZE/suits.length); rank++, deckPosition++) {
				deck[deckPosition] = new Card(rank, suit);
			}
		}
	}
	
	// Getters
	public Card[] getDeck() {
		return deck;
	}
	
	public static void print() {
		DeckOfCards deck = new DeckOfCards();
		for(Card card : deck.getDeck()) {
			card.print();
		}
	}
	
	public static void main(String[] args) {
		print();
	}
}
